{
    "@import": "./element.php",
    "name": "rmslideshow_item",
    "title": "Item",
    "width": 500,
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "fields": {
        "image": "${builder.image}",
        "image_alt": {
            "label": "Image Alt",
            "source": true,
            "enable": "image"
        },
        "source": "${builder.source}"
    },
    "fieldset": {
        "default": {
            "type": "tabs",
            "fields": [
                {
                    "title": "Content",
                    "fields": [
                        "image",
                        "image_alt"
                    ]
                },
                "${builder.advancedItem}"
            ]
        }
    }
}
