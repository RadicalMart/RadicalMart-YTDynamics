<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <name>PLG_YTDYNAMICS</name>
    <creationDate>24.03.2024</creationDate>
    <author>Cymbal</author>
    <authorEmail>cymbal@delo-design.ru</authorEmail>
    <authorUrl>https://delo-design.ru</authorUrl>
    <copyright>Copyright Â© 2020 Delo Design. All rights reserved.</copyright>
    <license>commerce</license>
    <version>1.2.0</version>
    <description>PLG_YTDYNAMICS_XML_DESCRIPTION</description>
    <namespace path="src">Joomla\Plugin\System\YTDynamics</namespace>
    <scriptfile>script.php</scriptfile>
    <files>
        <folder>elements</folder>
        <folder>services</folder>
        <folder>template</folder>
        <folder plugin="ytdynamics">src</folder>
    </files>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_ytdynamics.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_ytdynamics.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_system_ytdynamics.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_system_ytdynamics.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <fields name="product">
                    <field
                            name="medianotfound"
                            type="media"
                            label="PLG_YTDYNAMICS_CONFIG_PRODUCT_MEDIANOTFOUND_LABEL"
                            default=""
                    />
                </fields>
            </fieldset>
        </fields>
    </config>
    <media destination="plg_system_ytdynamics" folder="media">
        <folder>js</folder>
        <filename>joomla.asset.json</filename>
    </media>
</extension>
